<% include partial/header.ejs %>

<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(images/img_bg_4.jpg)" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="gtco-container">
		<div class="row row-mt-15em">
			<div class="col-md-12 mt-text text-center animate-box" data-animate-effect="fadeInUp">
				<h1> EDIT STORY</h1>	
			</div>
		</div>
	</div>
</header>

<div class="gtco-section gtco-gray-bg">
    <div class="gtco-container">
        <div class="row">

            <div class="col-md-20">
                <div class="col-md-10 animate-box">
                <h3>Edit Story</h3>
                <form action="/editstory/<%= post.id %>" method ="post">

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="text" name ="topic" class="form-control" placeholder=<%= post.topic %>>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <h4></h4>
                            <h4>Type</h4>
                            <input type="radio"  value="worksp" id="worksp" name="type" >
                            <label for="worksp">Workspcae&nbsp;</label>
                            <input type="radio"  value="canteen" id="canteen" name="type">
                            <label for="canteen">Canteen</label>
                        </div>
                    </div>

                    <div class="row form-group">
                            <div class="col-md-12">
                                <h4></h4>
                                <h4>Location</h4>
                                <input type="radio"  value="lek" id="lek" name="location" >
                                <label>จุฬาผั่งเล็ก</label>
                                <input type="radio"  value="yai" id="yai" name="location" >
                                <label >จุฬาฝั่งใหญ่ &nbsp;</label>
                            </div>
                        </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="text" name ="faculty" class="form-control" placeholder=<%= post.faculty %>>
                        </div>
                    </div>
                   
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="sr-only" for="subject">Subject</label>
                            <input type="text"name ="image" class="form-control" placeholder=<%= post.descripiton %>>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <textarea type="text" name ="description" cols="30" rows="10" class="form-control" placeholder= <%= post.descripiton %> > </textarea>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary">
                    </div>
                </form>		
            </div>
            <div class="col-md-5 col-md-push-1 animate-box">
                
            </div>
            </div>

        </div>
    </div>
</div>

<% include partial/footer.ejs %>